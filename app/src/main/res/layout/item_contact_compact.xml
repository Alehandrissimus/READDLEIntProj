<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContactItemCompact"
        android:layout_width="@dimen/avatar_small"
        android:layout_height="@dimen/avatar_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/ivContactItemCompactStatus"
        android:layout_width="@dimen/status_icon"
        android:layout_height="@dimen/status_icon"
        android:background="@drawable/iv_status"
        app:layout_constraintBottom_toBottomOf="@+id/ivContactItemCompact"
        app:layout_constraintEnd_toEndOf="@+id/ivContactItemCompact"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>