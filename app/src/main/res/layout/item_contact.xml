<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContactItem"
        android:layout_width="@dimen/avatar_small"
        android:layout_height="@dimen/avatar_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivContactItemStatus"
        android:layout_width="@dimen/status_icon"
        android:layout_height="@dimen/status_icon"
        android:background="@drawable/iv_status"
        app:layout_constraintBottom_toBottomOf="@+id/ivContactItem"
        app:layout_constraintEnd_toEndOf="@+id/ivContactItem"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvContactItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivContactItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ContactName"/>

</androidx.constraintlayout.widget.ConstraintLayout>